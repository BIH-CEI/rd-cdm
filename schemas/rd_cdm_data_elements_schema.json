{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "RD CDM Data Elements Schema",
    "type": "object",
    "properties": {
      "dataElements": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "ordinal": {
              "type": "string",
              "description": "The hierarchical position of the data element."
            },
            "section": {
              "type": "string",
              "description": "The section to which the data element belongs."
            },
            "elementName": {
              "type": "string",
              "description": "The name of the data element."
            },
            "elementCode": {
              "type": "string",
              "description": "The code associated with the data element."
            },
            "elementCodeSystem": {
              "type": "string",
              "description": "The code system used for the element."
            },
            "dataType": {
              "type": "string",
              "description": "The data type of the element."
            },
            "dataSpecification": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "The data specification (e.g., format)."
            },
            "valueSet": {
              "type": ["object", "null"],
              "description": "The optional value set associated with the element.",
              "properties": {
                "valueSetName": { "type": "string" },
                "valueSetOrigin": { "type": "string" },
                "valueSetLink": { "type": "string" },
                "display": { "type": "string" },
                "valueSetCode": { "type": "string" },
                "valueSetCodeSystem": { "type": "string" },
                "valueSetChoices": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "choiceDisplay": { "type": "string" },
                      "choiceCode": { "type": "string" },
                      "choiceCodeSystem": { "type": "string" }
                    },
                    "required": ["choiceDisplay", "choiceCode", "choiceCodeSystem"]
                  }
                }
              }
            },
            "fhirExpression_v4.0.1": { "type": "string" },
            "recommendedVS_fhir": { "type": ["string", "null"] },
            "phenopacketSchemaElement_v2.0": { "type": "string" },
            "recommendedVS_phenopacket": { "type": ["string", "null"] },
            "description": { "type": "string" }
          },
          "required": ["ordinal", "section", "elementName", "elementCode", "elementCodeSystem", "dataType", "dataSpecification"]
        }
      }
    },
    "required": ["dataElements"]
  }
  