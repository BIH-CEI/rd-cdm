{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RD CDM Schema",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "description": { "type": "string" },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "creationDate": { "type": "string" }
      }
    },
    "codeSystems": {
      "type": "array",
      "items": { "$ref": "#/definitions/codeSystem" }
    },
    "dataElements": {
      "type": "array",
      "items": { "$ref": "#/definitions/dataElement" }
    },
    "valueSets": {
      "type": "array",
      "items": { "$ref": "#/definitions/valueSet" }
    }
  },
  "required": ["version", "metadata", "dataElements", "valueSets", "codeSystems"],
  "definitions": {
    "codeSystem": {
      "type": "object",
      "properties": {
        "codeSystemName": { "type": "string" },
        "namespace_prefix": { "type": "string" },
        "version": { "type": "string" },
        "url": { "type": "string" },
        "synonyms": { "type": "array" }
      }
    },
    "dataElement": {
      "type": "object",
      "properties": {
        "ordinal": { "type": "string" },
        "section": { "type": "string" },
        "elementName": { "type": "string" },
        "elementCode": { "type": "string" },
        "elementCodeSystem": { "type": "string" },
        "dataType": { "type": "string" }
      }
    },
    "valueSet": {
      "type": "object",
      "properties": {
        "valueSetName": { "type": "string" },
        "valueSetOrigin": { "type": "string" },
        "valueSetLink": { "type": "string" },
        "display": { "type": "string" },
        "valueSetCode": { "type": "string" },
      "valueSetCodeSystem": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "codeSystem": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          }
        },
        "description": "The code systems associated with the value set."
      },
        "valueSetChoices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "choiceDisplay": { "type": "string" },
              "choiceCode": { "type": "string" },
              "choiceCodeSystem": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
